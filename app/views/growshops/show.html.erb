<div class="container text-center text-success">
  <br>
  <h1><%= @growshop.name %></h1>
</div>

<p class="text-success">
  <strong>Description:</strong>
  <%= @growshop.description %>
</p>

<p class="text-success">
  <strong class="text-success">Location:</strong>
  <%= @growshop.address %>
</p>

<%= link_to 'Edit', edit_growshop_path(@growshop) %> |
<%= link_to 'Back', growshops_path %>

<br>
<br>

<h1 class="text-success">Comments</h1>

<table>
  <thead>
    <tr class="text-success">
      <th>Content</th>
      <th>User</th>
      <th>Growshop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @growshop.comments.each do |comment| %>
      <tr class="text-success">
        <td><%= comment.content %></td>
        <td><%= comment.user.username %></td>
        <td><%= comment.growshop.name %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_growshop_comment_path(@growshop) %>




