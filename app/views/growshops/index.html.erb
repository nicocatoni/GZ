
<h1>Growshops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @growshops.each do |growshop| %>
      <tr>
        <td><%= growshop.name %></td>
        <td><%= growshop.description %></td>
        <td><%= growshop.location %></td>
        <td><%= link_to 'Show', growshop %></td>
        <td><%= link_to 'Edit', edit_growshop_path(growshop) %></td>
        <td><%= link_to 'Destroy', growshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Growshop', new_growshop_path %>
